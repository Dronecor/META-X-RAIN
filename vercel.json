{
  "version": 2,

  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "backend/main.py"
    }
  ],

  "env": {
    "PROJECT_NAME": "agentic-ai-crm",
    "GROQ_MODEL": "llama-3.3-70b-versatile"
  },

  "regions": ["iad1"]
}
